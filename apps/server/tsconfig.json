{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@config": ["config"],
      "@routes/*": ["routes/*"],
      "@webhooks/*": ["webhooks/*"],
      "@services/*": ["services/*"],
      "@core/*": ["core/*"],
      "@lib/*": ["lib/*"],
      "@providers/*": ["providers/*"]
    },
    "types": ["node"],
    "lib": ["ES2022"]
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
